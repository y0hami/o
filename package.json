{
  "name": "o",
  "version": "3.0.0",
  "description": "common object helper functions",
  "keywords": [
    "object",
    "helper",
    "util",
    "modules"
  ],
  "homepage": "https://o.hammy2899.dev",
  "bugs": {
    "url": "https://github.com/hammy2899/o/issues"
  },
  "license": "MIT",
  "author": "Sean Hamilton <sean@hami.me>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hammy2899/o.git"
  },
  "scripts": {
    "build:pack:clean": "rimraf packages/*/LICENSE packages/*/README.md",
    "build:pack:setup": "node ./scripts/pack/pack.js",
    "build:pack": "npm-run-all build:pack:clean build:pack:setup",
    "build:rollup:clean": "rimraf packages/*/dist",
    "build:rollup": "node --max-old-space-size=8192 ./node_modules/rollup/dist/bin/rollup -c ./configs/rollup/config.js",
    "build:clean": "npm-run-all build:pack:clean build:rollup:clean",
    "build": "npm-run-all build:clean build:rollup build:pack",
    "test": "jest --config ./configs/jest/config.js",
    "test:watch": "jest --config ./configs/jest.config.js --watch",
    "lint": "eslint --ext .ts packages/**/src/*",
    "changelog": "auto-changelog --config ./configs/auto-changelog",
    "release": "npm-run-all test lint build changelog",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "auto-changelog": "^2.4.0",
    "babel-jest": "^28.1.1",
    "esbuild": "^0.14.43",
    "eslint": "^7.12.1",
    "eslint-config-hami": "^1.1.4",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.4.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.3",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.9.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "website"
  ],
  "husky": {
    "hooks": {
      "pre-push": "yarn test && yarn lint",
      "commit-msg": "commitlint --config ./configs/commitlint.js -E HUSKY_GIT_PARAMS"
    }
  }
}
